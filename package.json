{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "gwiz",
  "title": "Gwiz",
  "description": "Chat with your Gmail.",
  "icon": "icon.png",
  "author": "stevepeak",
  "contributors": [],
  "categories": [
    "Applications",
    "Productivity",
    "Web",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "ask",
      "title": "Ask Question",
      "subtitle": "Gwiz",
      "description": "Ask Gwiz via Raycast",
      "mode": "view"
    },
    {
      "name": "saved",
      "title": "Saved Answer",
      "subtitle": "Gwiz",
      "description": "Collection of your saved answer",
      "mode": "view"
    },
    {
      "name": "history",
      "title": "History",
      "subtitle": "Gwiz",
      "description": "Collection of your recent answer",
      "mode": "view"
    },
    {
      "name": "conversation",
      "title": "Conversations",
      "subtitle": "Gwiz",
      "description": "Collection of your recent conversation",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "api",
      "label": "Open AI API",
      "description": "Enter your personal Open AI API",
      "type": "password",
      "title": "API",
      "required": false
    },
    {
      "name": "isAutoLoad",
      "label": "Enable auto-load selected text",
      "description": "Load selected text from your frontmost application to the question bar automatically",
      "type": "checkbox",
      "title": "Auto-load",
      "default": false,
      "required": false
    },
    {
      "name": "isAutoTTS",
      "label": "Enable text-to-speech for every response",
      "description": "Enable auto TTS everytime you get a generated answer",
      "type": "checkbox",
      "title": "Text-to-Speech",
      "required": false,
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.0",
    "@types/uuid": "^9.0.0",
    "openai": "^3.2.1",
    "say": "^0.16.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
